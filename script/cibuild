#!/usr/bin/env bash
set -e # halt script on error

#Output in subdirectory because of baseurl
bundle exec jekyll build -d _site/website-test

#bundle exec rake test
cd _site/website-test
ls .
cd ../..
bundle exec htmlproofer --url-swap "https\://ianjazz246.github.io/website-test:" --assume-extension --verbose --directory_index_file /website-test/index.html ./_site
